---
import BaseLayout from "@layouts/BaseLayout.astro";
import { Image } from "astro:assets";
import spotify from "@assets/spotifyclone.webp";
import m4wser from "@assets/m4wser.webp";
import livechat from "@assets/livechat.webp";
import tracker from "@assets/tracker.webp";
import pfp from "@assets/yo.jpg"
---

<BaseLayout title="M4ra">
  <!-- Main -->
  <main class="container mx-auto flex flex-col justify-between items-center">
    <!-- Introduction -->
    <section class="hero">
      <div class="hero-content flex-col lg:flex-row">
        <Image
          src={pfp}
          class="rounded-full w-52 h-52 object-cover"
          alt="My profile picture"
        />
        <div class="flex flex-col justify-center md:block">
          <h1 class="text-5xl font-bold">David Maratrat</h1>
          <p class="py-6">
            Hi! My name is David but usually use the alias Mara. I'm a fullstack
            developer who likes cybersecurity, and this is my portfolio.
          </p>
          <a class="btn btn-primary" href="files/CV_en.pdf" download
            >Download my CV</a
          >
        </div>
      </div>
    </section>

    <div class="divider divider-accent"></div>

    <!-- Projects -->
    <section class="flex flex-col w-full gap-10">
      <h2 class="text-4xl font-bold justify-center items-center text-center">Those are some of my projects:</h2>
      <section class="flex flex-row flex-wrap md:flex-nowrap gap-10 justify-around">
        <!-- M4WSER -->
        <div class="bg-primary card w-full mx-10 md:mx-0 shadow-sm">
          <figure class="px-2 pt-2">
            <Image src={m4wser} alt="M4wser image" class="rounded-xl" />
          </figure>
          <div class="card-body items-center text-center">
            <h2 class="card-title text-2xl">M4WSER</h2>
            <p class="text-xl">
              Web browser focused in OSINT & enhanced with AI
            </p>
            <div class="card-actions">
              <a view-transition class="btn btn-secondary" href="/projects/m4wser">View more...</a>
            </div>
          </div>
        </div>

        <!-- SPOTIFY -->
        <div class="bg-primary card w-full mx-10 md:mx-0 shadow-sm">
          <figure class="px-2 pt-2">
            <Image src={spotify} alt="spotifyclone image" class="rounded-xl" />
          </figure>
          <div class="card-body items-center text-center">
            <h2 class="card-title text-2xl">SPOTIFY CLONE</h2>
            <p class="text-xl">Basic Spotify clone</p>
            <div class="card-actions">
              <a view-transition class="btn btn-secondary" href="/projects/spotify">View more...</a>
            </div>
          </div>
        </div>

        <!-- TRACKER -->
        <div class="bg-primary card w-full mx-10 md:mx-0 shadow-sm">
          <figure class="px-2 pt-2">
            <Image src={tracker} alt="tracker image" class="rounded-xl" />
          </figure>
          <div class="card-body items-center text-center">
            <h2 class="card-title text-2xl">GAME TRACKER</h2>
            <p class="text-xl">Game stats tracker</p>
            <div class="card-actions">
              <a view-transition class="btn btn-secondary" href="/projects/tracker">View more...</a>
            </div>
          </div>
        </div>

        <!-- LIVECHAT -->
        <div class="bg-primary card w-full mx-10 md:mx-0 shadow-sm">
          <figure class="px-2 pt-2">
            <Image src={livechat} alt="live chat image" class="rounded-xl" />
          </figure>
          <div class="card-body items-center text-center">
            <h2 class="card-title text-2xl">LIVE chat</h2>
            <p class="text-xl">Live chat</p>
            <div class="card-actions">
              <a view-transition class="btn btn-secondary" href="/projects/livechat">View more...</a>
            </div>
          </div>
        </div>
      </section>
    </section>

    <div class="divider divider-accent"></div>

    <!-- Tools -->
    <section class="flex flex-col gap-10 w-full">
      <h2 class="text-4xl font-bold justify-center items-center text-center">Tools I work with:</h2>
      <div class="container mx-auto px-16">
        <!-- Languages -->
        <divider class="divider divider-accent my-5"
          ><h2 class="text-2xl font-bold">Languages</h2></divider
        >
        <div class="flex flex-row flex-wrap md:flex-nowrap justify-center items-center md:ml-5 gap-3">
